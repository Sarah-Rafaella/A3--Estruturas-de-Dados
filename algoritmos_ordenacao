#include <stdio.h>
#include "cliente.h"


//Função de DEBUG

void exibirClientes(Cliente *v, int n) {
    printf("\n--- Lista de Clientes (DEBUG) ---\n");
    for (int i = 0; i < n; i++) {
        printf("ID: %d | Nome: %s | Tipo: %d | Chegada: %d min | Atendimento: %d min\n",
               v[i].id, v[i].nome, v[i].tipo,
               v[i].horarioChegada, v[i].tempoAtendimento);
    }
    printf("---------------------------------\n");
}


// Bubble Sort

void bubbleSort(Cliente *v, int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {

            // Ordena pelo horário de chegada
            if (v[j].horarioChegada > v[j + 1].horarioChegada) {
                Cliente temp = v[j];
                v[j] = v[j + 1];
                v[j + 1] = temp;
            }
        }
    }
}

// Quick Sort

int particionar(Cliente *v, int inicio, int fim) {
    int pivo = v[fim].horarioChegada;  
    int i = inicio - 1;

    for (int j = inicio; j < fim; j++) {


        if (v[j].horarioChegada <= pivo) {
            i++;
            Cliente temp = v[i];
            v[i] = v[j];
            v[j] = temp;
        }
    }

    Cliente temp = v[i + 1];
    v[i + 1] = v[fim];
    v[fim] = temp;

    return i + 1;
}

void quickSort(Cliente *v, int inicio, int fim) {
    if (inicio < fim) {
        int p = particionar(v, inicio, fim);
        quickSort(v, inicio, p - 1);
        quickSort(v, p + 1, fim);
    }
}

